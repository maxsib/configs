# Decrease brightness
"xbacklight -dec 10"
    m:0x0 + c:232
    XF86MonBrightnessDown

# Increase brightness
"xbacklight -inc 10"
    m:0x0 + c:233
    XF86MonBrightnessUp

# Decrease PCM
"amixer sset PCM 5-"
    m:0x0 + c:122
    XF86AudioLowerVolume

# Increase PCM
"amixer sset PCM 5+"
    m:0x0 + c:123
    XF86AudioRaiseVolume

# Mute PCM
"amixer sset Master toggle"
    m:0x0 + c:121
    XF86AudioMute

# Dmenu
"dmenu_run -fn "Ubuntu Mono-13" -nb gray -nf black"
    m:0x40 + c:33
    Mod4 + p
